extends layout

block content
    div.container
        div.row
            div.col-xs-12
                h1.center !{title}
                each value, key in status
                    if value == 0
                        i.material-icons.md-60.center_img nature_people
                    else if value == 1
                        i.material-icons.md-60.center_img directions_walk
                    else if value == 2
                        i.material-icons.md-60.center_img directions_run
                    else if value == 3
                        i.material-icons.md-60.center_img sentiment_very_dissatisfied
                    h4.center=key
                    div.center
                        button(onclick="javascript:$.get('/downlink/#{key}')").btn.btn-default Notify device


